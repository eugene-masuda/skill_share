<section class="section">
    <div class="container">
        <p class="title">売却リスト</p>

        <table class="table is-fullwidth">
            <thead>
                <tr>
                    <th>購入日</th>
                    <th>取引相手</th>
                    <th>タイトル</th>
                    <th>有効期限</th>
                    <th>料金</th>
                    <th>状況</th>
                    <th>アクション</th>
                </tr>
            </thead>
            <tbody>
                <% if @orders.blank? %>
                  <tr>
                      <td colspan="6" class="has-text-centered"><h1>オーダーはありません</h1></td>
                  </tr>
                <% end %>
                <% @orders.each do |o| %>
                    <tr>
                        <td><%= o.created_at.strftime('%d %b %Y') %></td>
                        <td><%= o.buyer_name %></td>
                        <td>
                          <%= link_to o.title, order_detail_path(o) %>
                        </td>
                        <td><%= o.due_date.strftime('%d %b %Y') %></td>
                        <td><%= o.amount %>円</td>
                        <td>
                            <span class="tag <%= 'is-warning' if o.進行中? %> <%= 'is-success' if o.完了? %>">
                                <%= o.status.capitalize %>
                            </span>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>

    </div>
</section>