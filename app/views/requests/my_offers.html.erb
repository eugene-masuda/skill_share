<section class="section">
    <div class="container">
        <p class="title">オファー　一覧</p>
        <table class="table is-fullwidth">
            <thead>
                <tr>
                    <th>日付</th>
                    <th>タイトル名</th>
                    <th>予算</th>
                    <th>オファーされた金額</th>
                    <th>有効期間</th>
                    <th>状況</th>
                </tr>
            </thead>
            <tbody>
                <% if @offers.blank? %>
                    <tr>
                        <td colspan="6" class="has-text-centered"><h1>オファーはありません</h1></td>
                    </tr>
                <% end %>
                <% @offers.each do |o| %>
                    <tr>
                        <td><%= o.created_at.strftime('%d, %b %Y') %></td>
                        <td>
                            <%= link_to o.request.title, request_path(o.request) %>
                        </td>
                        <td><%= o.request.budget %>円</td>
                        <td><%= o.amount %>円</td>
                        <td><%= o.days %>日</td>
                        <td>
                            <span class="tag <%= 'is-warning' if o.保留中? %> 
                                             <%= 'is-success' if o.認証? %>
                                             <%= 'is-danger' if o.拒否? %> ">
                                <%= o.status.capitalize %>
                            </span>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</section>