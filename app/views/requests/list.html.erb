<section class="section">
    <div class="container">
        <p class="title">
            全てのリクエスト
            <%= link_to 'Post a request', new_request_path, class: "button is-primary is-pulled-right" %>
        </p>
        <div class="card">
            <div class="card-header">
                <%= form_tag '', method: :get do %>
                    <div class="field p-10">
                        <div class="select">
                            <%= select_tag 'category', content_tag(:option, 'All Categories', value: "") + 
                                                        options_for_select(@categories.map { |c| [c.name, c.id] }, 
                                                        selected: @category_id),
                                                        onchange: "this.form.submit();" %>
                        </div>
                    </div>
                <% end %>
            </div>
            <div class="card-content">

                <table class="table is-fullwidth">
                    <thead>
                        <tr>
                            <th>日付</th>
                            <th>購入者</th>
                            <th>リクエスト</th>
                            <th class="has-text-centered">オファー</th>
                            <th class="has-text-centered">期間</th>
                            <th class="has-text-centered">予算</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if @requests.blank? %>
                            <tr>
                                <td colspan="6" class="has-text-centered"><h1>リクエストはありません</h1></td>
                            </tr>
                        <% end %>
                        <% @requests.each do |r| %>
                            <tr>
                                <td><%= r.created_at.strftime('%d, %b %Y') %></td>
                                <td>
                                    <figure class="image is-48x48">
                                        <%= image_tag avatar_url(r.user), class: "is-rounded" %>
                                    </figure>
                                </td>
                                <td>
                                    <%= link_to request_path(r), class: "tootip" do %>
                                        <label for="" class="tooltip" data-tooltip="<%= r.description %>">
                                            <%= r.title.truncate(25, seperator: ' ') %>
                                        </label>
                                    <% end %>
                                </td>
                                <td class="has-text-right"><%= r.offers.count %></td>
                                <td class="has-text-right"><%= pluralize(r.delivery, '日') %></td>
                                <td class="has-text-right">$<%= r.budget %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</section>